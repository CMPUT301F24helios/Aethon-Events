<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_gradient_bg"
    android:padding="24dp">

    <!-- Event Title -->
    <TextView
        android:id="@+id/event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music Rooftop Session"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="8dp" />

    <!-- Invited Status -->
    <TextView
        android:id="@+id/invited_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_title"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:text="Invited"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/baseline_circle_24"
        android:fontFamily="sans-serif"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp" />

    <!-- Event Image -->
    <ImageView
        android:id="@+id/event_image"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@id/invited_status"
        android:layout_centerHorizontal="true"
        android:src="@drawable/event1"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_bg"
        android:clipToOutline="true"
        android:layout_marginTop="16dp" />

    <!-- Registration Details Header -->
    <TextView
        android:id="@+id/registration_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration Details"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@id/event_image"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Name Input -->
    <EditText
        android:id="@+id/name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:text="Napoleon Bonaparte"
        android:backgroundTint="#FFFFFF"
        android:background="@color/white"
        android:layout_below="@id/registration_details"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="#BBBBBB" />

    <!-- Email Input -->
    <EditText
        android:id="@+id/email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:background="@color/white"
        android:text="bonaparte@france.fr"
        android:backgroundTint="#FFFFFF"
        android:layout_below="@id/name_input"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="#BBBBBB" />

    <!-- Accept Invite Button -->
    <Button
        android:id="@+id/accept_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accept Invite"
        android:background="@drawable/button_bg"
        android:textColor="#FFFFFF"
        android:layout_below="@id/email_input"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:textSize="20sp" />

    <!-- Decline Invite Button -->
    <Button
        android:id="@+id/decline_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decline Invite"
        android:background="@drawable/button_bg"
        android:textColor="#FFFFFF"
        android:layout_below="@id/accept_button"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:textSize="20sp" />

</RelativeLayout>
