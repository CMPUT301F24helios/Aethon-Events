<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Gradient background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/create_event_bg"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Event"
            android:textSize="50sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <!-- Image and "Change Photo" Button -->
        <ImageView
            android:id="@+id/event_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/event1"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_bg"
            android:clipToOutline="true"/>

        <TextView
            android:id="@+id/change_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Photo"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:paddingTop="8dp" />

        <!-- Event Name Input -->
        <EditText
            android:id="@+id/event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Name"
            android:text="Music Rooftop Session"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:backgroundTint="@color/black"
            android:inputType="text"
            android:padding="8dp"
            android:layout_marginTop="16dp" />

        <!-- Facility Input -->
        <EditText
            android:id="@+id/facility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Facility"
            android:text="Edmonton Canada"
            android:textColor="@color/black"
            android:textColorHint="#BBFFFFFF"
            android:backgroundTint="@color/black"
            android:inputType="text"
            android:padding="8dp"
            android:layout_marginTop="16dp" />

        <!-- Category Input -->
        <EditText
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category"
            android:text="Musical"
            android:textColor="@color/black"
            android:textColorHint="#BBFFFFFF"
            android:backgroundTint="@color/black"
            android:inputType="text"
            android:padding="8dp"
            android:layout_marginTop="16dp" />

        <!-- Date of Event Input -->
        <EditText
            android:id="@+id/date_of_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Event"
            android:text="2024-07-02 , 7:00 PM"
            android:textColor="@color/black"
            android:textColorHint="#BBFFFFFF"
            android:backgroundTint="@color/black"
            android:inputType="datetime"
            android:padding="8dp"
            android:layout_marginTop="16dp" />

        <!-- Limit Waitlist Input -->
        <EditText
            android:id="@+id/limit_waitlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Limit Waitlist"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:backgroundTint="@color/black"
            android:inputType="number"
            android:padding="8dp"
            android:layout_marginTop="16dp" />

        <!-- Create Button -->
        <Button
            android:id="@+id/create_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create"
            android:backgroundTint="@color/purple"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            android:padding="20dp"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>
